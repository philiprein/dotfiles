#!/usr/bin/env zsh

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   clean            Clean up Homebrew cache"
  echo "   dock             Apply macOS Dock settings"
  echo "   edit             Open dotfiles in Visual Studio Code"
  echo "   help             This help message"
  echo "   macos            Apply macOS system defaults"
  echo "   update           Update macOS and Homebrew"
}

sub_clean () {
  echo "$ brew cleanup"
  brew cleanup
}

sub_dock () {
  . "${DOTFILES_DIR}/macos/dock.sh" && echo "Dock reloaded."
}

sub_edit () {
  sh -c "code $DOTFILES_DIR"
}

sub_update () {
  sudo softwareupdate -i -a --verbose
  brew update && brew upgrade
}

sub_macos () {
  for DEFAULTS_FILE in "${DOTFILES_DIR}"/macos/defaults.sh; do
    echo "Applying ${DEFAULTS_FILE}" && . "${DEFAULTS_FILE}"
  done
  echo "Done. Some changes may require a logout/restart to take effect."
}

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac